# WARNING: it is CRITICAL that this file & directory are NOT accessible directly via a web browser!
# https://nette.org/security-warning

parameters:
	dataRootDir: %appDir%/../data
	dbFile: %appDir%/db/photo_collector.sqlite3

php:
	date.timezone: Europe/Prague


application:
	errorPresenter: Error
	mapping:
		*: App\*Module\Presenters\*Presenter


session:
	expiration: 14 days


services:
	router: App\RouterFactory::createRouter
	fileRepository: App\Model\DiskFileRepository(%dataRootDir%)
	#authorRepository: App\Model\DummyAuthorRepository
	#eventRepository: App\Model\DummyEventRepository
	db: Nette\Database\Context(@database.default)
	authorRepository: App\Model\SqliteAuthorRepository(@db)
	eventRepository: App\Model\SqliteEventRepository(@db)
	authenticator: App\Model\SqliteAuthenticator(@db)

database:
	default:
		dsn: 'sqlite:%dbFile%'
